{
  "manifest_version": 3,
  "name": "PostHop",
  "version": "0.1.0",

  "icons": {
    "16": "assets/icons/posthop_icon_16.png",
    "32": "assets/icons/posthop_icon_32.png",
    "48": "assets/icons/posthop_icon_48.png",
    "64": "assets/icons/posthop_icon_64.png",
    "128": "assets/icons/posthop_icon_128.png",
    "256": "assets/icons/posthop_icon_256.png"
  },

  "description": "Adds a 'mail' shortcut to quickly open your email from your search bar.",

  "permissions": ["tabs", "scripting"],
  "host_permissions": [
    "https://accounts.google.com/*",
    "https://login.live.com/*",
    "https://login.yahoo.com/*",
    "https://www.icloud.com/*"
  ],
  "omnibox": { "keyword": "posthop" },

  "background": {
    "scripts": ["src/background/background.js"]
  },

  "action": {
    "default_icon": {
      "16": "assets/icons/posthop_icon-16.png",
      "32": "assets/icons/posthop_icon_32.png"
    },
    "default_title": "PostHop"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "posthop@example.com"
    }
  }
}
